<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#ffffff"></SolidColorBrush>
            <SolidColorBrush x:Key="GrooveSharkOrangeBrush" Color="#f86f05"></SolidColorBrush>
            <SolidColorBrush x:Key="PhoneForegroundBrush" Color="Black"></SolidColorBrush>
            <SolidColorBrush x:Key="PhoneForegroundLightBrush" Color="White"></SolidColorBrush>
            <SolidColorBrush x:Key="ButtonForegroundThemeBrush" Color="White"></SolidColorBrush>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
