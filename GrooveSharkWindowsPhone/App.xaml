<Application
    x:Class="GrooveSharkWindowsPhone.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GrooveSharkWindowsPhone"
    xmlns:converters="using:GrooveSharkWindowsPhone.Converters"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Ressources/ThemeDictionary.xaml"/>
                <ResourceDictionary Source="Ressources/PivotStyles.xaml" />
                <ResourceDictionary Source="Ressources/ListViewStyles.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Ressources/DataTemplates.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Ressources/Converters.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Ressources/ButtonTemplates.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>