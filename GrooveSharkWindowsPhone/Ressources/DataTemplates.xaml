<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:userControls="using:GrooveSharkWindowsPhone.UserControls">

    <DataTemplate x:Name="SongTemplate">
        <userControls:UCSong></userControls:UCSong>
    </DataTemplate>

    <DataTemplate x:Name="FavoriteTemplate">
        <userControls:UCFavorite></userControls:UCFavorite>
    </DataTemplate>

    <DataTemplate x:Name="PlaylistDataTemplate">
        <userControls:UCPlaylist></userControls:UCPlaylist>
    </DataTemplate>

    <DataTemplate x:Name="MinimizedPlaylistDataTemplate">
        <userControls:UCPlaylist Minimized="true"></userControls:UCPlaylist>
    </DataTemplate>

    <DataTemplate x:Name="NotOpenablePlaylistDataTemplate">
        <userControls:UCPlaylist CanOpen="False" DisableFlyout="True"></userControls:UCPlaylist>
    </DataTemplate>

</ResourceDictionary>
